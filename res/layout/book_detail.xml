<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 
    	xmlns:android="http://schemas.android.com/apk/res/android">
	  
	    <TableLayout
	        xmlns:android="http://schemas.android.com/apk/res/android"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:shrinkColumns="1"
	        android:stretchColumns="*" >

	        <TableRow>

	            <ImageView
	                android:id="@+id/imageShowCover"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="15dp"
	                android:layout_marginBottom="15dp"
	                android:layout_span="2"
	                android:src="@drawable/empty" />
	        </TableRow>

	        <TableRow android:layout_height="wrap_content" >

	            <TextView
	                android:layout_marginRight="5dp"
	                android:gravity="right"
	                android:padding="3dip"
	                android:text="@string/title"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/textTitle"
	                android:layout_height="wrap_content"
	                android:padding="3dip"
	                android:singleLine="false" />
	        </TableRow>

	        <TableRow>

	            <TextView
	                android:layout_marginRight="5dp"
	                android:gravity="right"
	                android:padding="3dip"
	                android:text="@string/author"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/textAuthor"
	                android:padding="3dip" />
	        </TableRow>

	        <TableRow>

	            <TextView
	                android:layout_marginRight="5dp"
	                android:gravity="right"
	                android:padding="3dip"
	                android:text="@string/category"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/textCategory"
	                android:padding="3dip" />
	        </TableRow>

	        <TableRow>

	            <TextView
	                android:layout_marginRight="5dp"
	                android:gravity="right"
	                android:padding="3dip"
	                android:text="@string/publisher"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/textPublisher"
	                android:padding="3dip" />
	        </TableRow>

	        <TableRow>

	            <TextView
	                android:layout_marginRight="5dp"
	                android:gravity="right"
	                android:padding="3dip"
	                android:text="@string/published"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/textPublished"
	                android:padding="3dip" />
	        </TableRow>

	        <TableRow>

	            <TextView
	                android:layout_marginRight="5dp"
	                android:gravity="right"
	                android:padding="3dip"
	                android:text="@string/pages"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/textPages"
	                android:padding="3dip" />
	        </TableRow>

	        <TableRow>

	            <TextView
	                android:layout_marginRight="5dp"
	                android:gravity="right"
	                android:padding="3dip"
	                android:text="@string/condition"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/textCondition"
	                android:padding="3dip" />
	        </TableRow>

	        <TableRow>

	            <TextView
	                android:layout_marginRight="5dp"
	                android:gravity="right"
	                android:padding="3dip"
	                android:text="@string/format"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/textFormat"
	                android:padding="3dip" />
	        </TableRow>

	        <TableRow>

	            <TextView
	                android:layout_marginRight="5dp"
	                android:gravity="right"
	                android:padding="3dip"
	                android:text="@string/isbn"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/textISBN"
	                android:padding="3dip" />
	        </TableRow>

	        <TableRow>

	            <TextView
	                android:layout_marginRight="5dp"
	                android:gravity="right"
	                android:padding="3dip"
	                android:text="@string/listed"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/textListed"
	                android:padding="3dip" />
	        </TableRow>

	        <TableRow>

	            <TextView
	                android:layout_marginRight="5dp"
	                android:gravity="right"
	                android:padding="3dip"
	                android:text="@string/book_tags"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/textTags"
	                android:padding="3dip" />
	        </TableRow>

	        <TableRow android:layout_height="wrap_content" >

	            <TextView
	                android:layout_marginRight="5dp"
	                android:gravity="right"
	                android:padding="3dip"
	                android:text="@string/description"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/textDescription"
	                android:layout_height="wrap_content"
	                android:padding="3dip"
	                android:singleLine="false" />
	        </TableRow>
	    </TableLayout>

</ScrollView>
