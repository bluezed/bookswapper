<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/LinearLayoutMain1"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical" 
xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp" />
    
    <TextView
        android:id="@+id/textViewMoreWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more_welcome" />
    
    <Button
        android:id="@+id/buttonSeeLatest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:onClick="onSeeLatestClick"
        android:text="@string/see_latest" />
    

    <TextView
        android:id="@+id/textViewSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/sign_up" />



    <Button
        android:id="@+id/buttonBookswapperSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:onClick="onSignUpClick"
        android:text="@string/bookswapper" />
    	
</LinearLayout>
